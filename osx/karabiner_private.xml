<?xml version="1.0"?>
<root>
    <item>
        <name>Remap F19 to Hyper</name>
        <appendix>OS X doesn't have a Hyper. This maps the F19 signal to Option + Command + Control.</appendix>

        <identifier>space_cadet.capslock_to_hyper</identifier>

        <autogen>
            --KeyToKey--
            KeyCode::F19,

            KeyCode::COMMAND_L,
            ModifierFlag::OPTION_L | ModifierFlag::CONTROL_L
        </autogen>
    </item>
    <item>
        <name>Remap Alt_L to Hyper</name>
